#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;
void main ()
{
	int suma,i,cont,n;
	cout<<"Ingrese el valor de n: ";
	cin>>n;
	suma=0;
	cont=2;
	while(cont<=n)
	{
		suma=suma+cont;
	cont=cont+2;
	}
	cout<<"La suma es: "<<suma;
	getch();
}
