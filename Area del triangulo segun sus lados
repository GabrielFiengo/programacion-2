#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
using namespace std;
int main ()
{
	float a,b,c,s,area;
	cout<<("ingrese a:");
	cin>>a;
	cout<<("ingrese b:");
	cin>>b;
	cout<<("ingrese c:");
	cin>>c;
	s=(a+b+c)/2;
	area=sqrt(s*(s-a)*(s-b)*(s-c));
	cout<<"el area es:"<<area;
	getch();
}
