#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;
void main ()
{
	int suma,i,N;
	cout<<"Ingrese el valor de N: ";
	cin>>N;
	suma=0;
	for(i=2;i<=N;i=i+2)
		suma=suma+i;
	cout<<"La suma de los N primeros numeros naturales es: "<<suma;
	getch();
}
